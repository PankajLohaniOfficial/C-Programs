#include<stdio.h>
#include<math.h>
int main()
 {
 int a,b,c;
 float s,A;
 printf("\n Enter the value of the sides of the triangle:");
 scanf("%d%d%d",&a,&b,&c);
 if((a+b>c) && (b+c>a) && (a+c>b))
 {
 s=(float)(a+b+c)/2;
 A=sqrt(s*(s-a)*(s-b)*(s-c));
 printf("\n The area of the triangle is:%f",A);
 }
 else
 printf("\n The triangle is not valid");
 return 0;
 } 
